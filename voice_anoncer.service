[Unit]
Description=Voice Anoncer Streamlit App
After=network.target

[Service]
User=vlad
WorkingDirectory=/path/to/voice_anoncer
Environment="PATH=/path/to/voice_anoncer/.venv/bin"
ExecStart=/path/to/voice_anoncer/.venv/bin/streamlit run app.py --server.port=8501 --server.address=0.0.0.0
Restart=always

[Install]
WantedBy=multi-user.target 